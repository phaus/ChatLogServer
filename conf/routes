# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           			controllers.Rooms.index()
GET     /users/:uid              				controllers.Users.show(uid: String)
GET     /rooms              					controllers.Rooms.index()
GET     /rooms/:roomId              			controllers.Rooms.browse(roomId: Long)
GET     /rooms/:roomId/day/:year/:month/:day	controllers.Rooms.show(roomId: Long, year: Integer, month: Integer, day: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			controllers.Assets.at(path="/public", file)
